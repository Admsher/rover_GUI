                size_hint_x: 0.13
                allow_stretch: True 

        BoxLayout:
            orientation:"vertical"
            size_hint:1,0.2

            CustomButton:
                text:"Rosmaster"

                pos_hint:{'center_x':0.5,'center_y':0}
                size_hint:(None,None)
                width:125
                height:50
                on_release:root.roscore()

        BoxLayout:
            orientation:"vertical"
            padding:10
            size_hint:1,0.06
           # canvas:
          #      Line:
         #           rounded_rectangle:self.x,self.y,self.width,self.height,10
