WindowManager:
    Menu:
    WorkingScreen:
    something:

<RegularLabel@Label>:
    canvas.before:
        Color:
            rgba:(96/225,96/225,96/225,0.6 )
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius:[15]
    font_size:25
    #text_size:self.size

    halign:'right'
    valign:'center'
    bold:True
<CustomButton@Button>:
    text_size:self.size
    font_size:25
    halign:'center'
    valign:'center'
    bold:True


<BoldLabel@Label>:
    text_size:self.size
    bold:True


<Menu>:
    name: "Menu"
    GridLayout:
        cols: 1
        Button:

            text: "Camfeed"
            on_release:
                app.root.current = "videofeed"
                root.manager.transition.direction = "left"
        Button:
            text: "something"
            on_release:
                app.root.current = "something"
                root.manager.transition.direction = "left"

<WorkingScreen>:
    name: "videofeed"
    FloatLayout:          
            
        Label:
            text:"Cameras"
            font_size:45
            font_style:"roboto mono"
            halign:"center"
            pos_hint:{"center_x":0.5,"center_y":0.95}
            size_hint:1,0.2
            canvas.before:
                Color:
                    rgba:(96/225,96/225,96/225,1)
                Rectangle:
                    source:'/home/ninaad/catkin_ws/src/rover_GUI/scripts/kivy_build/ambient.jpeg'
                    size:self.size
                    pos:self.pos
            color:(1,1,1,1)
            bold:True
            italic:True
            outline_color:(0,0,0)
            #outline_width:3

        Image:
            id:logo
            source:"/home/ninaad/catkin_ws/src/rover_GUI/scripts/kivy_build/kratoslogohead.png"
            pos_hint:{"center_x":0.9,"center_y":0.92}
            size_hint_x: 0.08
            allow_stretch: True   

        Button:

            text: "GO BACK"
            size_hint:0.08,0.07
            background_color:(0,0,0,0)
            pos_hint:{"center_x":0.05,"center_y":0.8}
            canvas.before:
                Color:
                    rgba:(96/225,96/225,96/225,1)
                RoundedRectangle:
                    source:'/home/ninaad/catkin_ws/src/rover_GUI/scripts/kivy_build/ambient.jpeg'
                    size:self.size
                    pos:self.pos
            color:(0,0,0,1)
            on_release:
                app.root.current = "Menu"
                root.manager.transition.direction = "right"


        ToggleButton:
            id:frame1
            text: "switch"
            size_hint:0.2,0.08
            background_color:0,0,0,0
            pos_hint:{"center_x":0.5,"center_y":0.2}
            canvas.before:
                Color:
                    rgba:(96/225,96/225,96/225,1)
                RoundedRectangle:
                    source:'/home/ninaad/catkin_ws/src/rover_GUI/scripts/kivy_build/ambient.jpeg'
                    size:self.size
                    pos:self.pos
            color:(0,0,0,1)

            on_release:root.switch()

        CustomButton:
            id:capture
            text: "site capture"
            size_hint:0.15,0.07
            background_color:0,0,0,0
            pos_hint:{"center_x":0.25,"center_y":0.078}#0.15
            on_release:root.capture()

            canvas.before:
                Color:
                    rgba:(96/225,96/225,96/225,1)
                RoundedRectangle:
                    source:'/home/ninaad/catkin_ws/src/rover_GUI/scripts/kivy_build/ambient.jpeg'
                    size:self.size
                    pos:self.pos
            color:(0,0,0,1)

        CustomButton:
            id:panorama
            text: "stitch"
            size_hint:0.15,0.07
            background_color:0,0,0,0
            pos_hint:{"center_x":0.75,"center_y":0.078}
            on_release:root.ssh()

            canvas.before:
                Color:
                    rgba:(96/225,96/225,96/225,1)
                RoundedRectangle:
                    source:'/home/ninaad/catkin_ws/src/rover_GUI/scripts/kivy_build/ambient.jpeg'
                    size:self.size
                    pos:self.pos
            color:(0,0,0,1)


        
        Image:
            id: video
            canvas.before:
                Line:
                    rounded_rectangle:self.x,self.y,self.width,self.height,10
                    width:2.5
            pos_hint:{"center_x":0.5,"center_y":0.55}
            size_hint_x: 0.55
            size_hint_y: 0.55
            allow_stretch: True

        Label:
            id:camera
            text:"cam_1"
            pos_hint:{"center_x":0.25,"center_y":0.37}
            size_hint:0.3,0.1
            bold:True

