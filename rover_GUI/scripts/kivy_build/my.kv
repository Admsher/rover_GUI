<something>:
    name:"something"
    BoxLayout:
        orientation:"vertical"
        padding:10

        BoxLayout:
            size_hint:1,0.13

            canvas.before:
                Color:
                    rgba:(128/225,128/225,128/225,1)
                Rectangle:
                    source:'/home/ninaad/catkin_ws/src/rover_GUI/scripts/kivy_build/ambient.jpeg'
                    size:self.size
                    pos:self.pos

            Label:
                size_hint:0.143,0.5

            Label:
                text:"System Check"
        
                font_size:45
                halign:"left"
                font_style:"roboto mono"
                bold:True
                italic:True
                color:(1,1,1,1)
                outline_color:(0,0,0)
