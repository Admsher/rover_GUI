                                on_release:root.updatee()
                   

                        BoxLayout: 
                            RegularLabel:
                                id:m1   
                                size_hint:2.5,1
                                text:"Base"
                        
                        BoxLayout: 
                            RegularLabel:
                                id:m2
                                size_hint:2.5,1
                                text:"Bevel roll"

                        BoxLayout:  
                            RegularLabel:
                                id:m3
                                size_hint:2.5,1
                                text:"Bevel pitch"

                        BoxLayout:  
                            RegularLabel:
                                id:m4
                                size_hint:2.5,1
                                text:"Gripper"          

                    #actuators
                    BoxLayout:  
                        orientation:"vertical" 
                        spacing:3       
                        padding:2         
                        BoxLayout:  
                            CustomButton:
                                size_hint:2.5,1
                                text: "/actuators"
                                on_release:root.update()
                        

                        BoxLayout:    
                            RegularLabel:
                                id:a1
                                size_hint:2.5,1
                                text:"4-inch Actuator"
                        
                        BoxLayout: 
                            RegularLabel:
                                id:a2
                                size_hint:2.5,1
                                text:"6-inch Actuator"

                        BoxLayout:  
                            RegularLabel:
                                id:a3
                                size_hint:2.5,1
                                text:"Stepper"
                        BoxLayout:  
                            RegularLabel:
                                id:a4
                                size_hint:2.5,1
                                text:"Servo"                                    
    
            BoxLayout:
                canvas:
                    Line:
                        rounded_rectangle:self.x,self.y,self.width,self.height,10
                        width:2
                orientation:"vertical"
                padding:10  
                CustomButton:
                    size_hint_y:0.2
                    text:"DRIVE"
                    halign:'center'
                    on_release:root.manual_drive()

                #Drive
                BoxLayout:  
                    orientation:"vertical"   
                    spacing:3       
                    padding:2   
                    BoxLayout:  
                        CustomButton:
                            size_hint:2.5,1
                            text: "/rover"
                            on_release:root.driver()
                   

                    BoxLayout: 
                        RegularLabel:
                            id:d1
                            size_hint:2.5,1
                            text:"Forward"            

    #                BoxLayout:    
   #                     RegularLabel:
  #                          id:d2
 #                           size_hint:2.5,1
#                            text:"right(CW)"
                    
                    BoxLayout: 
                        RegularLabel:
                            id:d3
                            size_hint:2.5,1
                            text:"Backward"
        CustomButton:
            text:"back"
            pos_hint:{'center_x':0.5}                
            size_hint:(None,None)
            width:100
            height:50
            on_release:
                app.root.current = "Menu"
                root.manager.transition.direction = "right"


  

